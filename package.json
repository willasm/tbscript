{
	"name": "tbscript-vscode-ext",
	"displayName": "TeraByte Script Language",
	"description": "TeraByte Script Language Support",
	"publisher": "willasm",
	"author": {
		"name": "William McKeever"
	},
	"license": "MIT - SEE LICENSE IN LICENSE.md",
	"version": "1.1.1",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"icon": "images/icon.png",
	"keywords": [
		"tbscript",
		"tbosdt",
		"tbos",
		"tbcmd",
		"terabyte",
		"tbosdtw",
		"tbosdtw64",
		"script"
	],
	"main": "./src/extension.js",
	"activationEvents": [
		"onLanguage:tbscript",
		"onCommand:tbscript.run"
	],
	"bugs": {
		"url": "https://github.com/willasm/tbscript/issues",
		"email": "willmck63@gmail.com"
	},
	"homepage": "https://github.com/willasm/tbscript/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/willasm/tbscript.git"
	},
	"capabilities": {
		"hoverProvider": "true"
	},
	"contributes": {
		"configurationDefaults": {
			"editor.tokenColorCustomizations": {
					"textMateRules": [
					{
						"scope": "keyword.tbscript",
						"settings": {
						  "foreground": "#d5ec80"
						}
					  },
					  {
						"scope": "keyword.system.tbscript",
						"settings": {
						  "foreground": "#2de7d8"
						}
					  },
					  {
						"scope": "keyword.strings.tbscript",
						"settings": {
						  "foreground": "#afa1e9"
						}
					  },
					  {
						"scope": "keyword.terminal.tbscript",
						"settings": {
						  "foreground": "#627cd3"
						}
					  },
					  {
						"scope": "keyword.disk.tbscript",
						"settings": {
						  "foreground": "#b56df8"
						}
					  },
					  {
						"scope": "keyword.other.gui.tbscript",
						"settings": {
						  "foreground": "#bf3be7"
						}
					  },
					  {
						"scope": "keyword.other.members.tbscript",
						"settings": {
						  "foreground": "#18ffe0"
						}
					  },
					  {
						"scope": "constant.character.escaped.dbl.tbscript",
						"settings": {
						  "foreground": "#f57df5"
						}
					  },
					  {
						"scope": "constant.character.escaped.single.tbscript",
						"settings": {
						  "foreground": "#eb73eb"
						}
					  },
					  {
						"scope": "constant.numeric.tbscript",
						"settings": {
						  "foreground": "#1ccbd1"
						}
					  },
					  {
						"scope": "constant.numeric.hexidecimal.tbscript",
						"settings": {
						  "foreground": "#3ee2ab"
						}
					  }
      			  ]
				}
			},
        "commands": [
			{
				"command": "tbscript.run.internal",
				"title": "TeraByte Script: Run Script in Internal TBCMD",
				"when": "editorTextFocus || editorLangId == tbscript || resourceLangId == tbscript"
			},
			{
				"command": "tbscript.run.external",
				"title": "TeraByte Script: Run Script in External TBCMD",
				"when": "editorTextFocus || editorLangId == tbscript || resourceLangId == tbscript"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "tbscript.run.internal",
					"when": "editorLangId == tbscript"
				},
				{
					"command": "tbscript.run.external",
					"when": "editorLangId == tbscript"
				}
			]
		},
		"keybindings": [
			{
				"command": "tbscript.run.internal",
				"key": "f6",
				"when": "editorLangId == tbscript || resourceLangId == tbscript"
			},
			{
				"command": "tbscript.run.external",
				"key": "shift+f6",
				"when": "editorLangId == tbscript || resourceLangId == tbscript"
			}
		],
		"configuration": {
			"type": "object",
			"title": "TeraByte Script Language",
			"properties": {
				"tbscript.executable": {
					"type": "string",
					"default": "tbosdtw64.exe",
					"linux": "tbosdt",
					"markdownDescription": "Full path and filename to your **tbosdtw.exe** or **tbosdtw64.exe** file."
				}
			}
		},
		"snippets": [
			{
				"language": "tbscript",
				"path": "./src/snippets/tbscript.json"
			},
			{
				"language": "tbscript",
				"path": "./src/snippets/constants.json"
			},
			{
				"language": "tbscript",
				"path": "./src/snippets/keywords.json"
			},
			{
				"language": "tbscript",
				"path": "./src/snippets/subroutines.json"
			},
			{
				"language": "tbscript",
				"path": "./src/snippets/tbcmd.json"
			}
		],
		"languages": [
			{
				"id": "tbscript",
				"aliases": [
					"TeraByte Script"
				],
				"extensions": [
					".tbs",
					".inc"
				],
				"configuration": "./src/syntaxes/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "tbscript",
				"scopeName": "source.tbscript",
				"path": "./src/syntaxes/tbscript.tmLanguage.json"
			}
		]
	}
}